{
    "manifest_version": 3,
    "name": "HLTV Matches",
    "version": "1.02",
    "description": "Displays matches of the day from HLTV",
    "permissions": ["storage", "alarms"],
    "host_permissions": [
      "https://azi.blob.core.windows.net/hltv/matches.json"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  